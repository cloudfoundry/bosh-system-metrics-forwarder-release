set -ex

source /var/vcap/packages/golang-1.11-linux/bosh/compile.env

mv indicators.yml ${BOSH_INSTALL_TARGET}/

mkdir src

shopt -s extglob
    mv !(src) src/
shopt -u extglob

export GO111MODULE=on

go build -mod=vendor -o ${BOSH_INSTALL_TARGET}/bosh-system-metrics-forwarder github.com/pivotal-cf/bosh-system-metrics-forwarder/cmd/forwarder
